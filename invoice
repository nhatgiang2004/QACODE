<body>
  <div class="invoice" id="invoice">
    <div class="invoice-header">
      <h2>HÓA ĐƠN BÁN HÀNG</h2>
      <small id="invoiceDate"></small>
    </div>

    <div class="invoice-info">
      <p><strong>Khách hàng:</strong> <span id="customerName">Nguyễn Văn A</span></p>
      <p><strong>SĐT:</strong> <span id="customerPhone">0123456789</span></p>
    </div>

    <table>
      <thead>
        <tr>
          <th>Sản phẩm</th>
          <th>SL</th>
          <th>Đơn giá</th>
          <th>Thành tiền</th>
        </tr>
      </thead>
      <tbody id="invoiceItems">
        <!-- Hàng hóa sẽ render bằng JS -->
      </tbody>
      <tfoot>
        <tr>
          <td colspan="3" class="total">Tổng cộng</td>
          <td id="totalAmount">0 VNĐ</td>
        </tr>
      </tfoot>
    </table>

    <button id="printButton">In hóa đơn</button>
  </div>

  <script>
    function formatCurrency(value) {
      return value.toLocaleString("vi-VN") + " VNĐ";
    }

    function loadInvoice() {
      const urlParams = new URLSearchParams(window.location.search);

      document.getElementById("customerName").textContent = urlParams.get("customer") || "Khách lẻ";
      document.getElementById("customerPhone").textContent = urlParams.get("phone") || "Không có";

      const today = new Date().toLocaleDateString("vi-VN");
      document.getElementById("invoiceDate").textContent = "Ngày: " + today;

      let items = [
        { name: "Sản phẩm A", qty: 2, price: 150000 },
        { name: "Sản phẩm B", qty: 1, price: 200000 },
        { name: "Sản phẩm C", qty: 3, price: 50000 }
      ];

      let tableBody = "";
      let total = 0;
      items.forEach(item => {
        const subtotal = item.qty * item.price;
        total += subtotal;
        tableBody += `
          <tr>
            <td>${item.name}</td>
            <td>${item.qty}</td>
            <td>${formatCurrency(item.price)}</td>
            <td>${formatCurrency(subtotal)}</td>
          </tr>`;
      });

      document.getElementById("invoiceItems").innerHTML = tableBody;
      document.getElementById("totalAmount").textContent = formatCurrency(total);
    }

    window.onload = function () {
      loadInvoice();
      document.getElementById("printButton").addEventListener("click", function () {
        window.print();
      });
    };
  </script>
</body>

