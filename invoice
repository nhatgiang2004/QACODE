  <h2>H√ìA ƒê∆†N B√ÅN H√ÄNG</h2>

  <p><b>Kh√°ch h√†ng:</b> <span id="customerName">---</span></p>
  <p><b>Ng√†y:</b> <span id="invoiceDate">---</span></p>

  <table>
    <thead>
      <tr>
        <th>S·∫£n ph·∫©m</th>
        <th>S·ªë l∆∞·ª£ng</th>
        <th>ƒê∆°n gi√°</th>
        <th>Th√†nh ti·ªÅn</th>
      </tr>
    </thead>
    <tbody id="itemsTable">
      <!-- D·ªØ li·ªáu s·∫Ω ƒë∆∞·ª£c th√™m b·∫±ng JS -->
    </tbody>
  </table>

  <p class="total">T·ªïng c·ªông: <span id="totalAmount">0</span> ƒë</p>

  <script>
    // üîπ L·∫•y d·ªØ li·ªáu t·ª´ URL, v√≠ d·ª•:
    // https://username.github.io/invoice.html?customer=Nam&date=2025-08-20&items=T√°o:2:15000|Cam:3:20000
    const params = new URLSearchParams(window.location.search);

    const customer = params.get("customer") || "Kh√°ch l·∫ª";
    const date = params.get("date") || new Date().toLocaleDateString("vi-VN");
    const itemsRaw = params.get("items") || "T√°o:2:15000|Cam:1:20000";

    document.getElementById("customerName").innerText = customer;
    document.getElementById("invoiceDate").innerText = date;

    const tbody = document.getElementById("itemsTable");
    let total = 0;

    itemsRaw.split("|").forEach(itemStr => {
      const [name, qty, price] = itemStr.split(":");
      const quantity = parseInt(qty);
      const unitPrice = parseInt(price);
      const amount = quantity * unitPrice;
      total += amount;

      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${name}</td>
        <td style="text-align:center;">${quantity}</td>
        <td style="text-align:right;">${unitPrice.toLocaleString("vi-VN")}</td>
        <td style="text-align:right;">${amount.toLocaleString("vi-VN")}</td>
      `;
      tbody.appendChild(row);
    });

    document.getElementById("totalAmount").innerText = total.toLocaleString("vi-VN");
  </script>

